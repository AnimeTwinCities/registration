{% for section in sections %}
    <li>
    {% if section.items|length == 1 %}
        {% if section.items[0] is defined %}
            {% set firstItem = section.items[0] %}
            {% if false %}
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path(firstItem.url) }}">{{ section.name }} <span class="sr-only">(current)</span></a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path(firstItem.url) }}">{{ section.name }}</a>
                </li>
            {% endif %}
        {% endif %}
    {% endif %}
    {% if section.items|length > 1 %}
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="javascript:void(0);" id="navbarDropdownMenuLink_{{ section.name }}"
               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                {{ section.name }}
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                {% for item in section.items %}
                    <a class="dropdown-item" href="{{ path(item.url) }}">{{ item.title }}</a>
                {% endfor %}
            </div>
        </li>
    {% endif %}
    </li>
{% endfor %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <li class="nav-item">
        <a class="nav-link waves-effect waves-light" href="{{ url('admin') }}">
            <i class="fas fa-cogs"></i>
            Admin
        </a>
    </li>
{% endif %}