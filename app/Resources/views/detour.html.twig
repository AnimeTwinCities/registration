<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <meta name="description" content="{{ description|default('') }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <link rel="image_src" href="{{ asset('images/ad.jpg') }}" />
        <meta name="keywords" content="{{  keywords|default('') }}" />
        <meta name="author" content="Anime Twin Cities, Inc." />

        <title>{% block title %}Anime Detour Registration System{% endblock %}</title>

        <link rel="stylesheet" media="screen" href="{{ asset('/libraries/bootstrap/css/bootstrap.min.css') }}"/>
        <link rel="stylesheet" media="screen" href="{{ asset('/libraries/bootstrap/css/bootstrap-theme.min.css') }}"/>
        <link rel="stylesheet" media="screen" type="text/css" href="{{ asset('css/adetour.css') }}"/>
        <!--[if (lt IE 9) & (!IEMobile)]>
        <link rel="stylesheet" media="screen" href="{{ asset('css/adetour_ie.css') }}" title="IE Layout" />
        <![endif]-->
        <link rel="stylesheet" media="all" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/ui-lightness/jquery-ui.css" />

        <link rel="stylesheet" media="screen" href="{{ asset('libraries/superfish/css/superfish.css') }}"/>
        {% block stylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
        <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    </head>
    <body>
        <div class="container">
            {% include 'detour/header.html.twig' %}

            {% include 'detour/sidebar.html.twig' %}

            <div class="row">
            {% block body %}
            {% endblock %}
            </div>

            {% include 'detour/footer.html.twig' %}
        </div>
            <script type="text/javascript" src="{{ asset('libraries/superfish/js/hoverIntent.js') }}"></script>
            <script type="text/javascript" src="{{ asset('libraries/superfish/js/superfish.js') }}"></script>
            <script type="text/javascript" src="{{ asset('libraries/bootstrap/js/bootstrap.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/adetour.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/rwd_scripts.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/matchmedia.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/picturefill.js') }}"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
