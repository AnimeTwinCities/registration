                showEmptyGroups = 1;
            } else {
                showEmptyGroups = 0;
            }
            newloc = "/" + listpage + "?searchText=" + searchText;
            window.location = newloc;
        }

        function searchenter(myfield, e)
        {
            var keycode;
            if (window.event) {
                keycode = window.event.keyCode;
            } else {
                if (e) {
                    keycode = e.which;
                } else {
                    return true;
                }
            }

            if (keycode == 13) {
                search();
                return false;
            }
            else {
                return true;
            }
        }
    </script>
{% endblock %}