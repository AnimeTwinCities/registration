{% extends 'detour.html.twig' %}

{% block body %}
    <h2>Users</h2>
    <div class="row">
        <div class="col-sm-3">
            <a class="btn btn-primary" href="/user/edit">New User</a>
        </div>
        <div class="col-sm-6">
            &nbsp;
        </div>
        <div class="col-sm-3">
            <form class="form-search">
                <div class="input-append">
                    <input type="text" id="search" name="search" value="{{ searchText }}"
                           onKeyPress="return searchenter(this,event)" placeholder="Search">
                    <button type="button" class="btn btn-primary" id="searchButton">Search</button>
                    <script>
                        $('#searchButton').click(function() {
                            search();
                        });
                    </script>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-condensed">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td><a href="/user/edit/{{ user.userId }}">{{ user.lastname }}, {{ user.firstname }}</a></td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% for role in user.roles %}
                                {{ role }}<br>
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <script language="javascript" type="text/javascript">
        var searchText = "{{ searchText }}";
        var listpage = "user/list";
        var editpage = "user/edit";

        function search()
        {
            searchText = document.getElementById('search').value;
            newloc = "/" + listpage + "?searchText=" + searchText;
            window.location = newloc;
        }

        function changeLimit(limit)
        {
