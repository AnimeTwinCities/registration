{% extends 'detour.html.twig' %}

{% block body %}
<div class="container bg-white">
    <div class="row">
        <div class="col-sm-12">
            <h2>Registration system modification history</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 pull-left">
        </div>
        <div class="col-sm-4 pull-right">
            <div class="form-group d-flex justify-content-center" style="margin-top: 1.2rem;">
                <input type="search"
                       id="search"
                       name="search"
                       value="{{ searchText }}"
                       onKeyPress="return searchenter(this,event)"
                       placeholder="Search"
                       aria-label="Search"
                       class="form-control">
                <button class="btn btn-primary btn-sm my-0 p waves-effect waves-light" type="submit" onclick="search_fn()">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
        <div class="col-sm-4 pull-right">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-sm">
                <thead class="unique-color">
                    <tr class="text-white">
                        <th style="width: 60px">Registration</th>
                        <th style="width: 160px">User</th>
                        <th style="width: 160px">Date</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                {% for registrationHistory in registrationHistories %}
                <tr class="info">
                    <td><a href="/registration/view/{{ registrationHistory.registration.registrationId }}">{{ registrationHistory.registration.registrationId }}</a></td>
                    <td>{{ registrationHistory.createdby.firstname }} {{ registrationHistory.createdby.lastname }}</td>
                    <td>{{ registrationHistory.createddate|date('M d, Y g:i a') }}</td>
                    <td>{{ registrationHistory.changetext|raw }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <b>{{ total }} Results. Showing Page {{ curPageNum }} of {{ totalPages }}, {{ limit }} per page</b><ul class="pager">
                {% if curPageNum == 1 %}
                    <li class="previous disabled"><a href="#">&larr; Previous</a></li>
                {% else %}
                    <li class="previous"><a href="/history/{{ curPageNum - 1 }}/?searchText={{ searchText }}">&larr; Previous</a></li>
                {% endif %}
                {% if curPageNum == totalPages %}
                    <li class="next disabled"><a href="#">Next &rarr;</a></li>
                {% else %}
                    <li class="next"><a href="/history/{{ curPageNum + 1 }}/?searchText={{ searchText }}">Next &rarr;</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>
<script language="javascript" type="text/javascript">
    var limit = {{ limit }};
    var searchText = "{{ searchText }}";
    var listpage = "history";

    function search() {
        searchText = document.getElementById('search').value;
        newloc = "/"+listpage+"/?limit={{ limit }}&searchText="+searchText;
        window.location=newloc;
    }

    function changeLimit(limit) {
        newloc = "/"+listpage+"/?limit="+limit+"&searchText="+searchText;
        window.location=newloc;
    }

    function searchenter(myfield,e) {
        var keycode;
        if (window.event) keycode = window.event.keyCode;
        else if (e) keycode = e.which;
        else return true;

        if (keycode == 13) {
            search();
            return false;
        }
        else
            return true;
    }
</script>
{% endblock %}
