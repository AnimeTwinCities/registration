{% extends 'detour.html.twig' %}

{% block body %}
    <div class="container bg-white">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="page-header">
                    {{ staff.name }}
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="col-4">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th class="unique-color text-white">Official Email:</th>
                        <td>
                            {{ staff.officialEmail |default('N/A') }}
                        </td>
                    </tr>
                    <tr>
                        <th class="unique-color text-white">Personal Email:</th>
                        <td>
                            {{ staff.personalEmail |default('N/A') }}
                        </td>
                    </tr>
                    <tr>
                        <th class="unique-color text-white">Phone:</th>
                        <td>
                            {{ staff.phoneNumber |default('N/A') }}
                        </td>
                    </tr>
                    <tr>
                        <th class="unique-color text-white">Date of Birth:</th>
                        <td>
                            {{ staff.dateOfBirth|date("F j Y")|default('N/A') }}
                        </td>
                    </tr>
                    <tr>
                        <th class="unique-color text-white">Shirt Size:</th>
                        <td>
                            {{ staff.shirt |default('N/A') }}
                        </td>
                    </tr>
                    <tr>
                        <th class="unique-color text-white">Bio:</th>
                        <td>
                            {{ staff.description |default('N/A') }}
                        </td>
                    </tr>
                    </thead>
                </table>
            </div>
            <div class="col-4">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th class="unique-color text-white">Registered:</th>
                            <td>
                                {% if staff.activeRegistration %}
                                <i class="fa fa-check-circle" aria-hidden="true"></i> Yes
                                {% else %}
                                <i class="fa fa-minus-circle" aria-hidden="true"></i> No
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th class="unique-color text-white">Active:</th>
                            <td>
                                {% if staff.active %}
                                    <i class="fa fa-check-circle" aria-hidden="true"></i> Yes
                                {% else %}
                                    <i class="fa fa-minus-circle" aria-hidden="true"></i> No
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th class="unique-color text-white">Intake Form Completed:</th>
                            <td>
                                {% if staff.completedIntake %}
                                    {{ staff.intakeFormFile }}
                                {% else %}
                                    <i class="fa fa-minus-circle" aria-hidden="true"></i> No
                                {% endif %}
                            </td>
                        </tr>
                    </thead>
                </table>
            </div>

            <div class="col-4">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th class="unique-color text-white" colspan="3">Departments:</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for staffDepartment in staff.departments %}
                        <tr>
                            <td>
                                <a href="{{ path('org_department_view', {'id': staffDepartment.department.id}) }}" style="color: black">
                                    {{ staffDepartment.department.name }}
                                </a>
                            </td>
                            <td>
                                {% if staffDepartment.isHead %}
                                    <i class="fa fa-crown" aria-hidden="true"></i> Head
                                    {% if staffDepartment.temporary and staffDepartment.isHead %} (Acting) {% endif %}
                                {% elseif staffDepartment.isSubHead %}
                                    <i class="fa fa-award" aria-hidden="true"></i> Sub-Head
                                {% endif %}
                            </td>
                            <td>
                                {{ staffDepartment.position }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <h3>History</h3>
                <table class="table table-striped table-sm history-table">
                    <thead class="unique-color text-white">
                    <tr>
                        <th>User</th>
                        <th>Date</th>
                        <th>Notes</th>
                    </tr>
                    </thead>
                    <tbody>
                    {#
                    {% for historyInstance in history %}
                        <tr class="info">
                            <td>{{ historyInstance.createdBy.firstName }} {{ historyInstance.createdBy.lastName }}</td>
                            <td>{{ historyInstance.createdDate|date('M d, Y g:i a') }}</td>
                            <td>{{ historyInstance.changeText|raw }}</td>
                        </tr>
                    {% endfor %}
                    {% if history is empty %}
                        <tr class="warning">
                            <td colspan="3">
                                There is no history available for this user yet.
                            </td>
                        </tr>
                    {% endif %}
                    #}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <style>
        .fa-check-circle {
            color: forestgreen;
        }
        .fa-minus-circle {
            color: red;
        }
    </style>
{% endblock %}
